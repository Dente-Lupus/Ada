@model Ada.Webpage.Models.PostSummary

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <img src="@Model.Header.AbsoluteUri" alt="noticias1">
        <div class="card-body">
            <h3>@Model.Title</h3>
            <p class="card-text">@Model.Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="@Model.PostUri.AbsoluteUri" role="button" class="btn btn-sm btn-outline-secondary">+ver mas</a>
                </div>
            </div>
        </div>
    </div>
</div>

