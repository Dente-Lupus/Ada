@model Ada.Webpage.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Banner.Any())
{
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            @await Html.PartialAsync("_BannerItem", Model.Banner.First(), new ViewDataDictionary(ViewData) { { "first", true } })
            @foreach (var item in Model.Banner.Skip(1))
            {
                @await Html.PartialAsync("_BannerItem", item, new ViewDataDictionary(ViewData) { { "first", false } })
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

<div class="container">
    <main role="main" class="pb-3">
        <h2></h2>
        <p></p>
        <section class="text-center">
            <div class="container">
                <h2>Qué está sucediendo</h2>
                <p class="lead text-muted">Todas las noticias recientes de la región.</p>
            </div>
        </section>

        @if (Model.Posts.Any())
        {
            <div class="album py-5">
                <div class="container">
                    <div class="row">
                        <!--primer fila de noticias-->
                        <!--Grid system should divide-->
                        @foreach (var post in Model.Posts.Take(6))
                        {
                            @await Html.PartialAsync("_PostItem", post)
                        }
                    </div>
                </div>
            </div>
        }
    </main>
</div>